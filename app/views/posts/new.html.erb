<div class="jumbotron">
  <div class="container">
  <div class="row">
    <div class="col-md-6">

     <h4> New Post </h4>      

     <%= form_tag "/posts", method: :post do %>

       <form>
         <div class="form-group">
            <label for="focusedInput">Title</label>
            <input type="text" class="form-control" name="title" id="focusedInput"  placeholder="Enter the title">
          </div>

          <div class="form-group">
            <label for="focusedInput">Post Description</label>
            <textarea type="text" class="form-control" name="description" id="focusedInput"  placeholder="Enter the description"></textarea>
          </div>

          <div class="checkbox">
            <input type="submit" class="btn btn-primary active" value="Create Post">
          </div>
        </form>

     <% end %>
    </div>
  </div>
  </div>
</div>
