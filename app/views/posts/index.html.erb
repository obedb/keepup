

<!-- Navigation -->


<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <div id="carousel-example-generic" class="carousel slide">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-responsive img-full" src="https://static.wixstatic.com/media/e6b437_34135dbd82804d9797f7f8979fcc2815~mv2.jpg/v1/fill/w_1380,h_398,al_c,q_85,usm_0.66_1.00_0.01/e6b437_34135dbd82804d9797f7f8979fcc2815~mv2.webp" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="https://www.dove.rw/wp-content/uploads/2017/04/IMG_9891.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="https://yellow.place/file/image/cover/0/0/87/xkiaovtmeiywtmuz.jpg" alt="">
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="icon-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="icon-next"></span>
                    </a>
                </div>
                <h2 class="brand-before">
                    <small>Welcome to</small>
                </h2>
                <h1 class="brand-name">Keep Up Kepler</h1>
                <hr class="tagline-divider">
                <h2>
                    <small>By
                        <strong>Kepler Kigali</strong>
                    </small>
                </h2>
            </div>
        </div>
    </div>

    <div class="row">
        <% @posts.each do |post| %>
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong><%= link_to post.title, "/posts/#{post.id}" %></strong>
                </h2>
        
                <p><%= post.description %></p>
            </div>
        </div>
      <% end -%>
    </div>
</div>
<!-- /.container -->





