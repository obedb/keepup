<div class="container">
 <div class="row">
  <div class="box">
    <div class="col-md-12">
      <hr>
      <h2 class="intro-text text-center"><%= @post.title %></h2>
      <div class="col-md-2"></div>
      <div class="col-md-8">
       <p style="text-align: justify;"><%= @post.description %></p>
       <hr>

       <h5 class="text-center">Comments</h5>
       <div>
        <%= @post.comments.each do |comment| %>
        <%= comment.description %>
        <% end %>
      </div>
      <div>
        <%= form_tag "/comments", method: :post do %>
        <input type="text" name="description" placeholder="Type your comment">

        <button type="submit">Comment</button>
        <% end %>
      </div>

      <%= button_to "edit post", "/posts/#{@post.id}/edit", method: :get %>
      <%= button_to "delete post", "/posts/#{@post.id}", method: :delete %>
    </div>
  </div>
</div>



</div>
</div>


