<div class="container">
 <div class="row">
  <div class="box">
    <div class="col-md-12">
      <hr>
      <h2 class="intro-text text-center"><%= @post.title %></h2>
      <div class="col-md-8 col-md-offset-2">
       <p style="text-align: justify;"><%= @post.description.html_safe %></p>
       <div class="post-button"><br>
          <%= button_to "edit post", "/posts/#{@post.id}/edit", method: :get %>
          <%= button_to "delete post", "/posts/#{@post.id}", method: :delete %>
       </div>
       <hr>

        <div id="comments">
          <% if @post.comments.empty? %>
            <p style="font-weight: bold; font-style: italic; font-size: 12px;"> <%=@post.comments.count %> comment yet! So, be the first to comment on this post!</p>
           <% else %>
              <h3><%= @post.comments.count%> comments</h3>
              <%= render @post.comments %>
            <% end %>

            </div>

            <h3>Add a comment:</h3>
            <%= render "comments/form" %>
    </div>
  </div>
</div>
</div>
</div>


