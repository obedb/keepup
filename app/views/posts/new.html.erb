<div class="jumbotron">
  <div class="container">
  <div class="row">
    <div class="col-md-6">

     <h4> New Post </h4>      

     <%= form_for :post , url: posts_new_path do |f|%>

       <form>
         <div class="form-group">
            <label for="focusedInput">Title</label>
            <%= f.text_field :title, type:"text", class: "form_control", id: "focusedInput", placeholder: "Title" %>
          </div>

          <div class="form-group">
            <%= f.label :Description, class: "focusedInput" %>
            <%=f.text_area :description, class: "form-control", id:"focusedInput", placeholder:"Description..."%>
          </div>
          <div class="checkbox">
          <% Category.all.each do |category| %>
            <label>
            <%= category.name%>:<%= check_box_tag "post[category_tokens][]", category.id%>
            </label>
          <% end %>
          </div>

          <div class="checkbox">
            <%= f.submit class: "btn btn-primary active" %>
          </div>
        </form>

     <% end %>
    </div>
  </div>
  </div>
</div>


