<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_body"><%= comment.description %> 

    <%= link_to '', "/posts/#{@post.id}/comments/#{comment.id}", class: "glyphicon glyphicon-trash", method: :delete, data: {confirm: 'you are going to delete this comment, you want to continue?'},  style: "color: red;"%>
    </p>
    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
  </div>

   <p></p>
</div>
