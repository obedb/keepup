
<div class="jumbotron">
  <div class="container">
  <div class="row">
    <div class="col-md-6">

     <h4> Update Post </h4>      

      <%= form_tag "/posts/#{@post.id}", method: :patch do %>

       <form>
         <div class="form-group">
            <label for="focusedInput">Title</label>
            <input type="text" class="form-control" name="title" id="focusedInput"  value="<%= @post.title%>" placeholder="Enter the title">
          </div>

          <div class="form-group">
            <label for="focusedInput">Post Description</label>
            <textarea type="text" class="form-control" name="description" id="focusedInput" placeholder="Enter the description"> <%= @post.description%> </textarea>
          </div>

          <div class="checkbox">
            <input type="submit" class="btn btn-primary active" value="Create Post">
          </div>
        </form>

     <% end %>
    </div>
  </div>
  </div>
</div>
